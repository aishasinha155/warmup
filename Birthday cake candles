#include<iostream>
using namespace std;
int main(){
    int n;
    cin>>n;
    int A[n];
    for(int i=0;i<n;i++){
        cin>>A[i];
    }
    int max=0,p=0;
    for(int i=0;i<n;i++){
        if(A[i]>max)
            max=A[i];   
    }
        for(int i=0;i<n;i++){
        if(A[i]==max)
            p++;
        
        }
        cout<<p;
        }
